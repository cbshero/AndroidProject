<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rl_penguin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/xml_peng_game_bg"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/iv_penguin"
            android:layout_width="180dp"
            android:layout_height="160dp"
            android:contentDescription="@string/penguin"
            android:background="@drawable/xml_peng"
            android:visibility="gone"
            />

        <ImageView
            android:id="@+id/iv_enemy1"
            android:layout_width="94dp"
            android:layout_height="83dp"
            android:contentDescription="@string/penguin"
            android:background="@drawable/xml_enemy1"
            android:visibility="gone"
            />
        <ImageView
            android:id="@+id/iv_enemy2"
            android:layout_width="94dp"
            android:layout_height="83dp"
            android:contentDescription="@string/penguin"
            android:background="@drawable/xml_enemy2"
            android:visibility="gone"
            />
        <ImageView
            android:id="@+id/iv_enemy3"
            android:layout_width="94dp"
            android:layout_height="83dp"
            android:contentDescription="@string/penguin"
            android:background="@drawable/xml_enemy3"
            android:visibility="gone"
            />
        <ImageView
            android:id="@+id/iv_enemy4"
            android:layout_width="94dp"
            android:layout_height="83dp"
            android:contentDescription="@string/penguin"
            android:background="@drawable/xml_enemy4"
            android:visibility="gone"
            />
        <ImageView
            android:id="@+id/iv_enemy5"
            android:layout_width="94dp"
            android:layout_height="83dp"
            android:contentDescription="@string/penguin"
            android:background="@drawable/xml_enemy5"
            android:visibility="gone"
            />
        <ImageView
            android:id="@+id/iv_enemy6"
            android:layout_width="94dp"
            android:layout_height="83dp"
            android:contentDescription="@string/penguin"
            android:background="@drawable/xml_enemy6"
            android:visibility="gone"
            />

        <ImageView
            android:id="@+id/iv_hurdle1"
            android:layout_width="94dp"
            android:layout_height="83dp"
            android:contentDescription="@string/penguin"
            android:background="@drawable/p_1"
            android:visibility="gone"
            />
        <ImageView
            android:id="@+id/iv_hurdle2"
            android:layout_width="94dp"
            android:layout_height="83dp"
            android:contentDescription="@string/penguin"
            android:background="@drawable/p_2"
            android:visibility="gone"
            />
        <ImageView
            android:id="@+id/iv_hurdle3"
            android:layout_width="94dp"
            android:layout_height="83dp"
            android:contentDescription="@string/penguin"
            android:background="@drawable/p_3"
            android:visibility="gone"
            />
        <ImageView
            android:id="@+id/iv_hurdle4"
            android:layout_width="94dp"
            android:layout_height="83dp"
            android:contentDescription="@string/penguin"
            android:background="@drawable/p_4"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/tv_score"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="820dp"
            android:contentDescription="@string/penguin"
            android:text="0"
            android:textColor="@color/gray_font"
            android:textSize="25sp"
            android:gravity="right"
            android:paddingTop="5dp"
            android:paddingRight="10dp"
            android:background="@drawable/score"
            />

        <ImageView
            android:id="@+id/iv_three"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="150dp"
            android:layout_marginLeft="410dp"
            android:background="@drawable/count3"
            android:visibility="gone"
            />

        <ImageView
            android:id="@+id/iv_two"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="150dp"
            android:layout_marginLeft="410dp"
            android:background="@drawable/count2"
            android:visibility="gone"
            />

        <ImageView
            android:id="@+id/iv_one"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="150dp"
            android:layout_marginLeft="410dp"
            android:background="@drawable/count1"
            android:visibility="gone"
            />

    </RelativeLayout>

</LinearLayout>
