<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:gravity="center|top"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/a1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="260dp"
                    android:layout_height="65dp"
                    android:background="@drawable/input_4"
                    android:layout_marginStart="20dp"
                    android:gravity="end">
                    <TextView
                        android:id="@+id/user_name"
                        android:layout_width="110dp"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:textColor="@color/gray_font"
                        android:gravity="center"
                        android:textSize="26sp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="260dp"
                    android:layout_height="65dp"
                    android:background="@drawable/input_8"
                    android:layout_marginStart="20dp"
                    android:gravity="end">
                    <TextView
                        android:id="@+id/user_age"
                        android:layout_width="110dp"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:textColor="@color/gray_font"
                        android:gravity="center"
                        android:textSize="26sp"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="260dp"
                    android:layout_height="65dp"
                    android:background="@drawable/input_6"
                    android:layout_marginStart="20dp"
                    android:gravity="end">
                    <TextView
                        android:id="@+id/user_sex"
                        android:layout_width="110dp"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:textColor="@color/gray_font"
                        android:gravity="center"
                        android:textSize="26sp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="260dp"
                    android:layout_height="65dp"
                    android:background="@drawable/input_11"
                    android:layout_marginStart="20dp"
                    android:gravity="end">
                    <TextView
                        android:id="@+id/user_disease"
                        android:layout_width="110dp"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:textColor="@color/gray_font"
                        android:gravity="center"
                        android:textSize="20sp"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="260dp"
                    android:layout_height="65dp"
                    android:background="@drawable/input_10"
                    android:layout_marginStart="20dp"
                    android:gravity="end">
                    <TextView
                        android:id="@+id/weight"
                        android:layout_width="110dp"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:textColor="@color/gray_font"
                        android:gravity="center"
                        android:textSize="26sp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="260dp"
                    android:layout_height="65dp"
                    android:background="@drawable/input_7"
                    android:layout_marginStart="20dp"
                    android:gravity="end">
                    <TextView
                        android:id="@+id/weight_rate"
                        android:layout_width="110dp"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:textColor="@color/gray_font"
                        android:gravity="center"
                        android:textSize="26sp"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:background="@drawable/a2">

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginTop="80dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/bg_c">

                <ImageView
                    android:id="@+id/position_point"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:src="@drawable/pin"
                    android:layout_marginTop="94dp"
                    android:layout_marginStart="94dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="340dp"
                android:layout_height="210dp"
                android:layout_marginTop="80dp"
                android:layout_marginStart="10dp">

                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/chart1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@drawable/a3">

            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/chart2"
                android:layout_marginTop="25dp"
                android:layout_width="500dp"
                android:layout_height="220dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:gravity="center"
            android:background="@drawable/a4">

            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/chart3"
                android:layout_marginTop="25dp"
                android:layout_width="500dp"
                android:layout_height="220dp"/>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>