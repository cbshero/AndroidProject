<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:gravity="top|center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp">
        <ImageButton
            android:id="@+id/btn_power"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="fitXY"
            android:src="@drawable/btn_off"
            android:background="#00000000"
            android:layout_marginTop="10dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="1100dp"
        android:layout_height="550dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="90dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/bg_bb"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="430dp"
            android:layout_height="430dp"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="60dp"
            android:layout_marginStart="55dp"
            android:layout_marginEnd="60dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:layout_gravity="center">
                <ImageButton
                    android:id="@+id/btn_move_up"
                    android:layout_width="70dp"
                    android:layout_height="80dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/xml_btn_move_up"
                    android:background="#00000000"
                    android:gravity="center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">
                <ImageButton
                    android:id="@+id/btn_move_left"
                    android:layout_width="50dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="20dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/xml_btn_move_back"
                    android:background="#00000000"
                    android:layout_weight="0"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
                <ImageButton
                    android:id="@+id/btn_move_right"
                    android:layout_width="50dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="20dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/xml_btn_move_forward"
                    android:background="#00000000"
                    android:layout_weight="0"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:layout_gravity="center">
                <ImageButton
                    android:id="@+id/btn_move_down"
                    android:layout_width="70dp"
                    android:layout_height="80dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/xml_btn_move_down"
                    android:background="#00000000"
                    android:gravity="center"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="30dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="480dp"
                android:layout_height="120dp"
                android:background="@drawable/input_1"
                android:orientation="horizontal"
                android:gravity="end">

                <Spinner
                    android:id="@+id/speed"
                    android:layout_width="220dp"
                    android:layout_height="100dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/s_cell_input"
                    android:textColor="@color/gray_font"
                    android:textSize="36sp"
                    android:popupBackground="#FFFFFF"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="480dp"
                android:layout_height="120dp"
                android:background="@drawable/input_7"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:gravity="end">
                <TextView
                    android:id="@+id/loadcell"
                    android:layout_width="220dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:textColor="@color/gray_font"
                    android:gravity="center"
                    android:text="0 kg"
                    android:textSize="36sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="480dp"
                android:layout_height="120dp"
                android:background="@drawable/input_3"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:gravity="end">
                <TextView
                    android:id="@+id/time"
                    android:layout_width="220dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:textColor="@color/gray_font"
                    android:gravity="center"
                    android:text="0 sec"
                    android:textSize="36sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="480dp"
                android:layout_height="120dp"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <ImageButton
                    android:id="@+id/ib_start"
                    android:layout_width="200dp"
                    android:layout_height="100dp"
                    android:scaleType="fitXY"
                    android:background="#00000000"
                    android:src="@drawable/xml_btn_start"
                    android:layout_marginStart="20dp"/>
                <ImageButton
                    android:id="@+id/ib_stop"
                    android:layout_width="200dp"
                    android:layout_height="100dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/xml_btn_stop"
                    android:background="#00000000"
                    android:layout_marginStart="30dp"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
