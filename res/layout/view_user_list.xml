<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="left|center"
    android:layout_width="match_parent"
    android:layout_height="55dip">
  
    <LinearLayout android:orientation="horizontal" android:id="@+id/user_layout" android:layout_width="match_parent" android:layout_height="55dip">
        <TextView android:textSize="22sp" android:gravity="center" android:textColor="#ff414141" android:id="@+id/name" android:layout_width="120dp" android:layout_height="40dp" android:layout_marginLeft="5dip" android:layout_marginTop="15dip"/>
        <TextView android:textSize="22sp" android:gravity="center" android:textColor="#ff414141" android:id="@+id/age" android:layout_width="120dp" android:layout_height="40dp" android:layout_marginLeft="5dip" android:layout_marginTop="15dip" />
        <TextView android:textSize="22sp" android:gravity="center" android:textColor="#ff414141" android:id="@+id/sex" android:layout_width="120dp" android:layout_height="40dp" android:layout_marginLeft="5dip" android:layout_marginTop="15dip" />
        <TextView android:textSize="22sp" android:gravity="center" android:textColor="#ff414141" android:id="@+id/weight" android:layout_width="120dp" android:layout_height="40dp" android:layout_marginLeft="5dip" android:layout_marginTop="15dip" />
        <TextView android:textSize="22sp" android:gravity="center" android:textColor="#ff414141" android:id="@+id/disease" android:layout_width="120dp" android:layout_height="40dp" android:layout_marginLeft="5dip" android:layout_marginTop="15dip" />
        <TextView android:textSize="16sp" android:gravity="center" android:textColor="#ff414141" android:id="@+id/regdate" android:layout_width="170dp" android:layout_height="40dp" android:layout_marginLeft="5dip" android:layout_marginTop="8dip" />
	</LinearLayout>
    
</LinearLayout>
