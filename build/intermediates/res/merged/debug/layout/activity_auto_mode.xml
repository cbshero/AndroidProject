<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="1100dp"
        android:layout_height="550dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="90dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/bg_bbb"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="410dp"
            android:layout_height="410dp"
            android:layout_margin="70dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/position_point"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/pin"
                android:layout_marginTop="50dp"
                android:layout_marginStart="50dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="30dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="480dp"
                android:layout_height="120dp"
                android:background="@drawable/input_7"
                android:orientation="horizontal"
                android:layout_marginTop="30dp"
                android:gravity="end">
                <TextView
                    android:id="@+id/weight_rate"
                    android:layout_width="220dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:textColor="@color/gray_font"
                    android:gravity="center"
                    android:text="20 kg"
                    android:textSize="36sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="480dp"
                android:layout_height="120dp"
                android:background="@drawable/input_3"
                android:orientation="horizontal"
                android:layout_marginTop="30dp"
                android:gravity="end">
                <TextView
                    android:id="@+id/time"
                    android:layout_width="220dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:textColor="@color/gray_font"
                    android:gravity="center"
                    android:text="0 sec"
                    android:textSize="36sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="480dp"
                android:layout_height="120dp"
                android:orientation="horizontal"
                android:layout_marginTop="30dp">
                <ImageButton
                    android:id="@+id/ib_start"
                    android:layout_width="200dp"
                    android:layout_height="100dp"
                    android:scaleType="fitXY"
                    android:background="#00000000"
                    android:src="@drawable/xml_btn_start"
                    android:layout_marginStart="20dp"/>
                <ImageButton
                    android:id="@+id/ib_stop"
                    android:layout_width="200dp"
                    android:layout_height="100dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/xml_btn_stop"
                    android:background="#00000000"
                    android:layout_marginStart="30dp"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
