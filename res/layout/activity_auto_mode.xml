<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:gravity="top|center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp">
        <ImageButton
            android:id="@+id/btn_power"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="fitXY"
            android:src="@drawable/btn_off"
            android:background="#00000000"
            android:layout_marginTop="10dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="1100dp"
        android:layout_height="550dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/bg_bbb"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="410dp"
            android:layout_height="410dp"
            android:layout_marginTop="65dp"
            android:layout_marginBottom="64dp"
            android:layout_marginStart="62dp"
            android:layout_marginEnd="64dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/position_point"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/pin"
                android:layout_marginTop="200dp"
                android:layout_marginStart="200dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="30dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="480dp"
                android:layout_height="120dp"
                android:background="@drawable/input_2"
                android:orientation="horizontal"
                android:layout_marginTop="0dp"
                android:gravity="end">
                <TextView
                    android:id="@+id/weight_rate"
                    android:layout_width="160dp"
                    android:layout_height="100dp"
                    android:layout_margin="10dp"
                    android:textColor="@color/gray_font"
                    android:gravity="center"
                    android:text="20 kg"
                    android:textSize="36sp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_margin="10dp">
                    <ImageButton
                        android:id="@+id/btn_weight_up"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:scaleType="fitXY"
                        android:background="#00000000"
                        android:src="@drawable/xml_btn_up"/>
                    <ImageButton
                        android:id="@+id/btn_weight_down"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/xml_btn_down"
                        android:background="#00000000"
                        android:layout_marginTop="20dp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="480dp"
                android:layout_height="120dp"
                android:background="@drawable/input_9"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:gravity="end">
                <TextView
                    android:id="@+id/loadcell"
                    android:layout_width="220dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:textColor="@color/gray_font"
                    android:gravity="center"
                    android:text="0 kg"
                    android:textSize="36sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="480dp"
                android:layout_height="120dp"
                android:background="@drawable/input_3"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:gravity="end">
                <TextView
                    android:id="@+id/time"
                    android:layout_width="220dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:textColor="@color/gray_font"
                    android:gravity="center"
                    android:text="0 sec"
                    android:textSize="36sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="480dp"
                android:layout_height="120dp"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <ImageButton
                    android:id="@+id/ib_start"
                    android:layout_width="200dp"
                    android:layout_height="100dp"
                    android:scaleType="fitXY"
                    android:background="#00000000"
                    android:src="@drawable/xml_btn_start"
                    android:layout_marginStart="20dp"/>
                <ImageButton
                    android:id="@+id/ib_stop"
                    android:layout_width="200dp"
                    android:layout_height="100dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/xml_btn_stop"
                    android:background="#00000000"
                    android:layout_marginStart="30dp"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
